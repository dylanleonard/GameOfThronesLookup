<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dylanleonard.gameofthroneslookup.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/detailsList"
        android:columnCount="2">

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="Year"
            android:id="@+id/year"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="Rated"
            android:id="@+id/rated"
            android:layout_row="1"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/ratedView"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="Released"
            android:id="@+id/released"
            android:layout_row="2"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/releasedView"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="Season"
            android:id="@+id/season"
            android:layout_row="3"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/seasonView"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="Episode"
            android:id="@+id/episode"
            android:layout_row="4"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/episodeView"
            android:layout_row="4"
            android:layout_column="1" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="Runtime"
            android:id="@+id/runtime"
            android:layout_row="5"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/yearView"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/runtimeView"
            android:layout_row="5"
            android:layout_column="1" />

    </GridLayout>
</RelativeLayout>
